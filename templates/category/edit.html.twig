{% extends 'base.html.twig' %}

{% block title %}Edit Category{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-4">Edit Category</h1>

        <div class="row">
            <div class="col-md-8">
                <form method="post">
                    {{ form_start(form, {'attr': {'class': 'form'}}) }}

                    <div class="form-group">
                        {{ form_label(form.name, 'Category Name') }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        <div class="form-check">
                            {{ form_widget(form.active, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(form.active, 'Active', {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Update</button>

                    {{ form_end(form) }}
                </form>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-8">
                <a href="{{ path('app_category_index') }}" class="btn btn-secondary">Back to List</a>
            </div>
            <div class="col-md-4">
                <div class="mt-3">
                    {{ include('category/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
