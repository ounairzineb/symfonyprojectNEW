{% extends 'home.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1 class="mb-4">Liste des cat√©gories</h1>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>{{ category.active ? 'Yes' : 'No' }}</td>
                    <td>
                        <a class="btn btn-sm btn-info" href="{{ path('app_category_show', {'id': category.id}) }}">Show</a>
                        <a class="btn btn-sm btn-primary" href="{{ path('app_category_edit', {'id': category.id}) }}">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <a class="btn btn-success" href="{{ path('app_category_new') }}">Create New</a>
{% endblock %}
