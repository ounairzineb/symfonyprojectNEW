{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-4">Edit Product</h1>

        <div class="row">
            <div class="col-md-8">
                <form method="post" enctype="multipart/form-data">
                    {{ form_start(form, {'attr': {'class': 'form'}}) }}

                    <div class="form-group">
                        {{ form_label(form.name, 'Product Name') }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.description, 'Description') }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.price, 'Price') }}
                        {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        <div class="form-check">
                            {{ form_widget(form.active, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(form.active, 'Active', {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.imageFile, 'Image File') }}
                        {{ form_widget(form.imageFile, {'attr': {'class': 'form-control-file'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.category, 'Category') }}
                        {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <button type="submit" class="btn btn-primary">Update</button>

                    {{ form_end(form) }}
                </form>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-8">
                <a href="{{ path('app_product_index') }}" class="btn btn-secondary">Back to List</a>
            </div>
            <div class="col-md-4">
                {{ include('product/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
