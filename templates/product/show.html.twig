{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-4">Product</h1>

        <div class="row">
            <div class="col-md-8">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ product.id }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ path('app_product_index') }}" class="btn btn-secondary">Back to List</a>
                <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-primary">Edit</a>
            </div>
            <div class="col-md-4">
                {{ include('product/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
